<div class = "row">
    <div class = "col-md-6 col-md-offset-3 well">
        <%= form_tag '/login' do %>
        <div class="form-group">
            <%= label_tag :user %>
            <%= text_field_tag :user, nil, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
        </div>
        <%= submit_tag 'log in', class: 'btn btn-success' %> 
        <% end %>
    </div>
</div>